{
    "compilerOptions": {
        "target": "es5",
        "module":"umd",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "downlevelIteration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es6",
            "dom"
        ],
        "jsx": "react",
        "jsxFactory": "XNode.create",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
		"node_modules",
		"tests"
    ]
}